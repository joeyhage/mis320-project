html
    include includes/head
    body
        include includes/navigation
        div.container
            div.column.is-8
                div.field
                    label.label Customer Search
                    div.control
                        input.input#search-query(
                            type='text'
                            placeholder='First Name, Last Name, Phone #, or Email'
                            autofocus
                        )
            hr
            table.table.is-striped.is-hoverable
                mixin columns
                    tr
                        th First Name
                        th Last Name
                        th Phone Number
                thead: +columns
                if tenants
                    if tenants.length > 10
                        tfoot: +columns
                    tbody: for tenant in tenants
                            tr(id=tenant.TenantID)
                                td=tenant.First_Name
                                td=tenant.Last_Name
                                td=tenant.Phone_Number
        include includes/foot